<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/second_background"
    tools:context=".Pianodetails">

    <ImageView
        android:id="@+id/return_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_baseline_arrow_back_24"/>

    <TextView
        android:id="@+id/firstpianotxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="how to use me "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/indie_flower"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="25dp"

        />

    <HorizontalScrollView
        android:id="@+id/Scrollviewid"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:background="#1687A7">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/piano_first_card"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/piano_image_view"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/first_piano_video_image" />

                    <TextView
                        android:id="@+id/piano_Text_view1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="7 days to learn piano"
                        android:textColor="#000"
                        android:textSize="15dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/piano_second_card"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/piano_image_view2"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/second_piano_video" />

                    <TextView
                        android:id="@+id/piano_Text_view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="How to read notes"
                        android:textColor="#000"
                        android:textSize="17dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/piano_third_card"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/piano_image_view3"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/third_piano_video" />

                    <TextView
                        android:id="@+id/piano_Text_view3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Learning some simple chords"
                        android:textColor="#000"
                        android:textSize="15dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/piano_forth_card"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/piano_image_view4"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/forth_piano_video" />

                    <TextView
                        android:id="@+id/piano_Text_view4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="5 beginners piano exercises"
                        android:textColor="#000"
                        android:textSize="15dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/secondpianotxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music clips to play and learn"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/indie_flower"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20dp"

        />


    <HorizontalScrollView
        android:id="@+id/Scrollviewid2"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_marginLeft="30dp"
        android:background="#1687A7">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/pianomusic_first_card"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pianomusic_image_view"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/first_piano_music" />

                    <TextView
                        android:id="@+id/pianomusid_Text_view1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Married life song"
                        android:textColor="#000"
                        android:textSize="15dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/pianomusic_second_card"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pianomusic_image_view2"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/second_piano_music" />

                    <TextView
                        android:id="@+id/pianomusic_Text_view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="River flows in you song"
                        android:textColor="#000"
                        android:textSize="15dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pianomusic_third_card"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pianomusic_image_view3"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/third_piano_music" />

                    <TextView
                        android:id="@+id/pianomusic_Text_view3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="We don't talk about bruno song"
                        android:textColor="#000"
                        android:textSize="15dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pianomusic_forth_card"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pianomusic_image_view4"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/forth_piano_music" />

                    <TextView
                        android:id="@+id/pianomusic_Text_view4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Canon song"
                        android:textColor="#000"
                        android:textSize="15dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>